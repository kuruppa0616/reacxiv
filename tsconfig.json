{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "moduleResolution": "node",
    "module": "esNext",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}